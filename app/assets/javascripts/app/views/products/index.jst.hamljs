%h1 Listing Product
%table.table.table-striped
  %thead
    %tr
      %th
        Code
      %th
        Name
      %th
      %th
  %tbody
    :for product in products
      %tr.product(data-id=product.id)
        %td
          %a(data-type="show")= product.code
        %td
          = product.name
        %td
          %a(data-type="edit") Edit
        %td
          %a(data-type="destroy") Destroy
%p
  %a(data-type="new") New Product
