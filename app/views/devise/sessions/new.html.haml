= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-welcome', id: 'user_sign_in' }) do |f|
  %h2.form-welcome-heading Sign in
  = f.email_field :email, autofocus: true, placeholder: User.human_attribute_name(:email), class: "input-block-level"
  = f.password_field :password, placeholder: User.human_attribute_name(:password), autocomplete: "off", class: "input-block-level"
  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label :remember_me
  %div= f.submit "Sign in", class: 'btn btn-primary'
  = render "devise/shared/links"
